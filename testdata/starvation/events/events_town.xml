<events>
    <event>
        <probability>1</probability>
        
        <effect type='delta' property='town.food' delta='- $town.population' />
    </event>
    
    <event>
        <probability>1</probability>
        
        <requirement>$town.food < 100</requirement>
        <requirement>$town.population >= 10</requirement>
        
        <effect type='userchoice'>
            <text>Food is running low...</text>
            <option>
                <text>Send people away</text>
                <effect type='delta' property='town.population' value='-10' />
            </option>
            <option>
                <text>Do nothing. Duh!</text>
            </option>
        </effect>
    </event>
    
    <event>
        <probability>1</probability>
        
        <requirement>$town.population <= 0</requirement>
        
        <effect type='userchoice'>
            <text>Everyone died. Duh.</text>
            <option>
                <text>Laugh.</text>
            </option>
        </effect>
    </event>
</events>
