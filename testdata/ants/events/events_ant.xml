<events>
    <event>
        <probability>1</probability>
        
        <!-- An ant produces an amount of food equal to its level -->
        <effect type='delta'>
            <property>ant.nest.food</property>
            <value>$ant.level</value>
        </effect>
        
        <!-- Level up every day -->
        <effect type='delta'>
            <property>ant.level</property>
            <value>1</value>
        </effect>

    </event>
</events>
